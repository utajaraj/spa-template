<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
    <style>
        * {
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
            letter-spacing: 1.5px;
            box-sizing: border-box;
        }

        html {
            overflow-x: hidden;
            overflow-y: hidden;
        }

        .inputContianer {
            display: flex;
            width: 100%;
            margin-bottom: 15px;
            flex-direction: column;
        }

        .inputContianer>input {
            height: 30px;
            padding-left: 15px;
            background-color: #f6f6f6;
            outline: none;
            border: 1px solid #d0d0d0;
        }

        #body {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100vw;
            height: 100vh;
        }

        #login {
            min-width: 100%;
            display: flex;
            position: relative;
            justify-content: center;
            align-items: center;
            height: 100%;
            flex-wrap: wrap;
        }

        #submit {
            margin-top: 10px;
            cursor: pointer;
            color: #f7f7f7;
            background-color: #e62222;
            transition: background-color 0.3s ease;
        }

        #submit:hover {
            background-color: #ff0000;
            transition: background-color 0.3s ease;
        }

        #background {
            background-image: url("/bg.png");
            background-size: cover;
            margin: 0;
        }

        .blur {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            filter: blur(0px);
            background: #ffffffba;
            z-index: 0;
        }

        #login>* {
            z-index: 1;
            padding: 0 2vw;
        }

        #login>*:first-child {
            width: 50%;
            height: 100%;
            background-color: #282828c9;
            display: flex;
            align-items: center;
        }

        #errorContainer {
            display: none;
            margin-bottom: 15px;
        }

        #errorContainer.show {
            display: block;
            width: 100%;
            padding: 7.5px 30px;
            background-color: #681111;
            color: white;
            border: 2px solid #ff0000;
        }

        #errorContainer.show>p {
            color: ff5555;
        }

        ul>li{
            padding: 15px 0;
            margin: 15px;
            background-color: white;

            box-shadow: -1px 2px 8px 0px rgba(216, 216, 216, 0.75);
            -webkit-box-shadow: -1px 2px 8px 0px rgba(216, 216, 216, 0.75);
            -moz-box-shadow: -1px 2px 8px 0px rgba(216, 216, 216, 0.75);
        }
        @media only screen and (max-width:750px) {
            #login {
                padding: 0 2vw;
                box-shadow: none !important;
                width: 100% !important;
            }

            #login>* {
                width: 100% !important;
            }

            .blur {
                background-color: none;
                background: none;
            }

            #body {
                width: unset;
                display: flex;
                justify-content: center;
                align-items: baseline;
                height: 100vh;
                margin-top: 10vh;

            }

            .loginBranding {
                display: flex;
                width: 100%;
                padding: 50px 0;
                flex-wrap: wrap;
                justify-content: center;
            }

            .loginBranding>div {
                width: 100% !important;
                text-align: center;
            }

            .loginBranding>div>h1 {
                font-size: 18px !important;
            }

            .loginBranding>div>h2 {
                font-size: 12px !important;
            }

            .fields {
                height: 150px;
                overflow-y: auto;
            }
        }
    </style>
</head>

<body id="background">
    <div id="body">
        <div class="blur"></div>
        <div id="login">
            <div style="
